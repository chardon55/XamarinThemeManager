<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Chardon.XamarinThemeManager</RootNamespace>
    <Authors>chardon</Authors>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/chardon55/XamarinThemeManager.git</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Copyright>(c) 2021 chardon</Copyright>
    <Description>A simple program to manage Xamarin theme resource dictionary.</Description>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <PackageReleaseNotes>Dependency compatibility change</PackageReleaseNotes>
    <PackageProjectUrl>https://www.nuget.org/packages/XamarinThemeManager</PackageProjectUrl>
    <Version>1.0.1.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Essentials" Version="1.5.0" />
    <PackageReference Include="Xamarin.Forms" Version="4.5.0.356" />
  </ItemGroup>

  <ItemGroup>
    <None Include="LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
